#include <iostream>
using namespace std;

int main() {
    int n;
    int z;
    int count;
    cin>>n;
    for(int i=1;i<n;i++)
    {
        for(int j=1;j<n;j++)
        {
            z=i+j;
            if(z==n)
            {
                count++;
                
            }
            
        }
        
    }
    cout<<count;
	return 0;
}
